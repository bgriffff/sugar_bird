      <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Table</h1>
            <p class="lead text-muted">Best viewed on a computer. This table is meant to show all the data associated with an order.</p>
          </div>
        </div>
      </section>

    <main>
    <table class="table table-hover" >
        <thead style="background-color: #edd7c7;">
            <tr>
                <th class="fw-light" scope ="col">Order</th>
                <th class="fw-light" scope ="col">Name</th>
                <th class="fw-light" scope ="col">Pickup</th>
                <th class="fw-light" scope ="col">Phone</th>
                <th class="fw-light" scope ="col">Email</th>
                <th class="fw-light" scope ="col">Quantity</th>
                <th class="fw-light" scope ="col">Event</th>
                <th class="fw-light" scope ="col">Theme</th>
                <th class="fw-light" scope ="col">Colors</th>
                <th class="fw-light" scope ="col">Personalization</th>
                <th class="fw-light" scope ="col">Questions</th>
                <th class="fw-light" scope ="col">Notes</th>
                <th class="fw-light" scope ="col">View</th>
                <th class="fw-light" scope ="col">Delete</th>
            </tr>
        </thead>
        <tbody style="background-color: #FFF6F0;">
            <% for(let iCount = 0; iCount < sugar_bird.length; iCount++) 
            { %>
                <tr>
                    <th scope="row"><%= sugar_bird[iCount].order_id %></th>
                    <td><%= sugar_bird[iCount].first_name %> <%= sugar_bird[iCount].last_name %></td>

                    <td> 
                      <div class='event' data-date="<%= sugar_bird[iCount].pickup_date %>">
                          <div class="date"></div>
                      </div>
                    </td>

                    <td><%= sugar_bird[iCount].phone_number %></td>

                    <td><a href="mailto:<%= sugar_bird[iCount].email %>"><%= sugar_bird[iCount].email %></a></td>

                    <td><%= sugar_bird[iCount].num_cookies %></td>

                    <td><%= sugar_bird[iCount].event %></td>

                    <td><%= sugar_bird[iCount].theme %></td>

                    <td><%= sugar_bird[iCount].colors %></td>

                    <td><%= sugar_bird[iCount].personalization %></td>

                    <td><%= sugar_bird[iCount].questions %></td>

                    <td><%= sugar_bird[iCount].notes %></td>

                    <td>
                        <form action="/view/<%= sugar_bird[iCount].order_id %>" method="GET">
                            <button class="btn btn-sm btn-outline-primary" type="submit">View</button>
                        </form>
                    </td>
                    <td>
                        <form action="/deleteTable/<%= sugar_bird[iCount].order_id %>" method="POST">
                            <button class="btn btn-sm btn-outline-primary" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>    
            <% } %>
        </tbody>
        <br>
        <br>
    </table>



    <script src="https://unpkg.com/dayjs@1.8.21/dayjs.min.js"></script>
    <script src="../js/date.js"></script>
          
