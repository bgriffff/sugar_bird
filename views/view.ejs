            <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-sm-6">
                            <div class="col-3 col-md-2 mb-5"></div>
                            <h1 id="order_id" name="order_id">Order #<%= sugar_bird[0].order_id %></h1>
                            <hr class="col-3 col-md-2 mb-5">
        
                        <div class="col-md-7 col-lg-8">
                            <div class="row g-3">

                                <div class="col-12">
                                  <div class='event' data-date="<%= sugar_bird[0].pickup_date %>">
                                    <p><b>Pickup Date:</b><div class="date"></div></p>
                                    
                                  </div>
                                </div>

                            <h3>Contact info</h3>
        
                                <div class="col-12">
                                    <p><b>Name: </b><%= sugar_bird[0].first_name %> <%= sugar_bird[0].last_name %> </p>
                                </div>
                                
                                <div  class="col-12">
                                    <p><b>Email: </b><a href="mailto:<%= sugar_bird[0].email %>"><%= sugar_bird[0].email %></a></p>
                                </div>
        
                                <div class="col-12">
                                    <p><b>Phone Number:</b> <%= sugar_bird[0].phone_number %></p>
                                </div>
        
                            <h2>Order details</h2>
        
                                <div class="col-12">
                                    <p><b># Cookies:</b> <%= sugar_bird[0].num_cookies %></p>
                                </div>
        
                                <div class="col-12">
                                    <p><b>Event:</b> <%= sugar_bird[0].event %></p>
                                </div>
        
                                <div class="col-12">
                                    <p><b>Color:</b> <%= sugar_bird[0].color %></p>
                                </div>                       
        
                                <div class="col-12">
                                    <p><b>Wording or personalization:</b> <%= sugar_bird[0].personalization %></p>
                                </div>
        
                                <div class="col-12">
                                    <p><b>Questions/comments:</b> <%= sugar_bird[0].questions %></p>
                                </div>

                                <div class="col-12">
                                    <form action="/view" method="POST">   
                                        <input type="hidden" id="order_id" name="order_id" value="<%= sugar_bird[0].order_id %>">
                                        <label for="notes" class="form-label"><b>Notes: </b></label>
                                        <textarea class="form-control" id="notes" name="notes" rows="3"><%= sugar_bird[0].notes %></textarea>
                                            
                                </div>       

                                        <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
                                        
                                        <form action="/orders" method="GET">
                                            <button class="w-100 btn btn-primary btn-lg" type="submit">Back</button>
                                        </form>
                                    </form> 
                        </div>
                    </div> 
                </form>
                <footer class="my-5 pt-5 text-muted text-center text-small">
                    <p class="mb-1">&copy; 2022 Sugar Bird</p>
                    </ul>
                </footer>

